<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#DAEFDB"
    >
    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simulador de Crédito"
        android:gravity="center"
        android:background="#58C0EF"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nombre"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etnombre"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Ingrese Nombre"
            android:drawableStart="@drawable/ic_baseline_person_24"/>
        <TextView
            android:text="Fecha"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etfecha"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Fecha"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Monto"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/etmonto"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Ingrese Monto"/>
        <TextView
            android:text="Tipo"
            android:layout_width="60dp"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/sptipo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:text="Número de Cuotas"
        android:layout_width="180dp"
        android:layout_height="wrap_content"/>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/rb12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12"
            android:checked="true"
            />
        <RadioButton
            android:id="@+id/rb24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24"
            android:layout_marginLeft="50dp"
            />
        <RadioButton
            android:id="@+id/rb36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="36"
            android:layout_marginLeft="50dp"
            />
    </RadioGroup>
    <Switch
        android:id="@+id/swcuotamanejo"
        android:layout_width="match_parent"
        android:text="Incluye cuota de manejo"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Valor Cuota"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvcuota"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="Total Deuda"
            android:layout_width="80dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvdeuda"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageButton
            android:id="@+id/btncalc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_calculate_24"
            />
        <ImageButton
            android:id="@+id/btnclean"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_cleaning_services_24"
            android:background="#fff"
            />

    </LinearLayout>

</LinearLayout>